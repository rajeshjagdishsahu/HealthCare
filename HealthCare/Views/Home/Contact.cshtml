<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form" }))

        {
            @Html.ValidationSummary(true, "Please fix the following errors")
        <fieldset>

            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Your Name" })
                @Html.ValidationMessageFor(m =>m.UserName,  "", new {@class ="alert-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserPostcode)
                @Html.TextBoxFor(m => m.UserPostcode, new { @class = "form-control", placeholder = "Enter Your postcode" })
                @Html.ValidationMessageFor(m => m.UserPostcode, "", new {@class ="alert-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserEmailAddress)
                @Html.TextBoxFor(m => m.UserEmailAddress, new { @class = "form-control", placeholder = "Enter your email", type = "email" })
                @Html.ValidationMessageFor(m => m.UserEmailAddress, "", new {@class ="alert-danger"})
                @* <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserPhoneNumber)
                @Html.TextBoxFor(m => m.UserPhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number", type = "number" })
               @* @Html.ValidationMessageFor(m => m.UserPhoneNumber, "", new {@class ="alert-danger"})*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserMessage)
                @Html.TextAreaFor(m => m.UserMessage, new { @class = "form-control", placeholder = "Enter your Message", rows = "3"})
                @Html.ValidationMessageFor(m => m.UserMessage, "", new {@class ="alert-danger"})
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <button type="reset" class="btn btn-warning">Clear</button>
        </fieldset>
        }
    </div>
